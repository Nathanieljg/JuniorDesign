<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/addEarlyNotificationFragment"
    tools:context=".AddEarlyNotificationFragment"
    android:orientation="horizontal">

    <NumberPicker
        android:id="@+id/editEarlyNotificationsNumberPickerHours"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/editEarlyNotificationsTextViewH"
        android:layout_width="46dp"
        android:layout_height="102dp"
        android:gravity="center"
        android:text="@string/hours_text"
        android:textSize="30sp"
        android:layout_gravity="center_vertical"/>

    <NumberPicker
        android:id="@+id/editEarlyNotificationsNumberPickerMinutes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/editEarlyNotificationsTextViewM"
        android:layout_width="46dp"
        android:layout_height="102dp"
        android:gravity="center"
        android:text="@string/minutes_text"
        android:textSize="30sp"
        android:layout_gravity="center_vertical"/>

    <NumberPicker
        android:id="@+id/editEarlyNotificationsNumberPickerSeconds"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/editEarlyNotificationsTextViewS"
        android:layout_width="46dp"
        android:layout_height="102dp"
        android:gravity="center"
        android:text="@string/seconds_text"
        android:textSize="30sp"
        android:layout_gravity="center_vertical"/>

    <Button
        android:id="@+id/addEarlyWarningDialogButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="@string/addString"
        android:layout_gravity="center_vertical"
        android:background="@android:color/holo_green_light"/>


</LinearLayout>